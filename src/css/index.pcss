@tailwind base;
@tailwind components;
@tailwind utilities;

@import url("https://fonts.googleapis.com/css?family=Varela&display=swap");

html {
    font-family: 'Varela', Arial, sans-serif;
    min-width: 260px;
    min-height: 460px;
}

body {
    background-image: url('../assets/img/bg.png');
    color: black;
}

/********** Title box **********/

.title-box {
    @apply text-center mt-32 mb-auto w-40 bg-gray-100 p-1 z-10;
    border: 2px solid black;
    border-radius: 0.375rem;
}

@media(min-width:640px) {
    .title-box {
        border: 8px double black;
        width: 16rem;
    }
}

@media(min-width:768px) {
    .title-box {
        @apply my-auto;
        width: 32rem;
    }
}

@media(min-width:1024px) {
    .title-box {
        width: 48rem;
    }
}

@media(min-width:1280px) {
    .title-box {
        width: 64rem;
    }
}

/********** End title box **********/

/********** Gradient strip **********/

.gradiant-base {
    height: 5px;
    max-height: 20%;
    filter: blur(1px);
    background: repeating-linear-gradient(-45deg, #f22 0%,#22f 20%,#2ff 40%, #2f2 60%, #ff2 80%, #f22 100%);
}

.strip {
    @apply gradiant-base;
    width: 1000px;
}

.strip-big {
    @apply gradiant-base;
    width: 2000px;
}

.strip-wrapper {
    border: none;
    overflow: hidden;
}

@media(max-height:480px) {
    .strip-wrapper {
        display: none;
    }
}

@variants animated {
    .strip {
        @apply gradiant-base;
        width: 1000px;
        animation: parade 5s infinite linear;
    }

    .strip-big {
        @apply gradiant-base;
        width: 2000px;
        animation: big-parade 10s infinite linear;
    }
}

@keyframes parade {
    from {
        background-position: -1000px;
    }
    to {
        background-position: 0;
    }
}

@keyframes big-parade {
    from {
        background-position: -2000px;
    }
    to {
        background-position: 0;
    }
}

/********** End gradient strip **********/

/********** External links **********/

.external-links {
    @apply flex flex-row items-center;
}

.external-links > * {
    @apply w-8 m-2;
}

.external-links:hover > * {
    opacity: 0.75;
}

.external-links:hover >:hover {
    opacity: 1;
}

/********** End external links **********/

/***** Double arrow icon *****/
a {
    text-decoration: none;
    color: #ffff;
}

.round {
    position: absolute;
    border: 2px solid black;
    border-radius: 20%;
    width: 40px;
    height: 40px;
    cursor: pointer;
}

.btn-arrows {
    @apply self-center round right-0 mr-8 bg-gray-100;
    position: absolute;
}

.btn-arrows .arrow {
    left: 30%;
}

.arrow {
    position: absolute;
    bottom: 0;
    margin-left: 0;
    width: 12px;
    height: 12px;
    top: 12px;
    -webkit-mask-image:  url('data:image/svg+xml;base64,');
    mask-image: url('data:image/svg+xml;base64,');
    background-color: black;
}
.second {
    margin-left: 8px;
}

@keyframes bounceAlpha {
    0% {
        opacity: 1;
        transform: translateX(0px) scale(1);
    }
    25% {
        opacity: 0;
        transform: translateX(10px) scale(0.9);
    }
    26% {
        opacity: 0;
        transform: translateX(-10px) scale(0.9);
    }
    55% {
        opacity: 1;
        transform: translateX(0px) scale(1);
    }
}

.btn-arrows .arrow {
    animation-name: bounceAlpha;
    animation-duration: 1.4s;
    animation-iteration-count: infinite;
    animation-timing-function: linear;
}
.btn-arrows .arrow.first {
    animation-name: bounceAlpha;
    animation-duration: 1.4s;
    animation-delay: 0.2s;
    animation-iteration-count: infinite;
    animation-timing-function: linear;
}

/***** End double arrow icon *****/